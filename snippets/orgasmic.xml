<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="github"
           fetch="https://github.com" />
  
  <remote  name="gitlab"
           fetch="https://gitlab.com" />
  
  <remote name="orgasmic"
          fetch="https://github.com/Orgasmic-Project"
          revision="twelve"/>

  <remote  name="orgasmic-gitlab"
           fetch="https://gitlab.com/bicet/"
           revision="twelve" />

  <!-- Rootdir -->
  <project path="bionic" name="bionic" groups="pdk" remote="orgasmic" />
  <project path="libcore" name="libcore" remote="orgasmic" />
  <project path="manifest" name="manifest" remote="orgasmic" />

  <!-- Bootable -->
  <project path="bootable/recovery" name="bootable_recovery" groups="pdk" remote="orgasmic" />
  <project path="external/colorkt" name="external_colorkt" remote="orgasmic" />
  <project path="external/themelib" name="external_themelib" remote="orgasmic" />

  <!-- Build -->
  <project path="build/make" name="build_make" groups="pdk" remote="orgasmic" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="build_soong" groups="pdk,tradefed" remote="orgasmic" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Device -->
  <project path="device/orgasmic/sepolicy" name="device_orgasmic_sepolicy" remote="orgasmic" />
  <project path="device/qcom/sepolicy" name="device_qcom_sepolicy" groups="qcom,pdk-qcom" remote="orgasmic" />
  <project path="device/qcom/sepolicy_vndr" name="device_qcom_sepolicy_vndr" groups="qcom,pdk-qcom" remote="orgasmic" />
  <project path="device/qcom/sepolicy-legacy" name="device_qcom_sepolicy" groups="qcom,pdk-qcom" revision="twelve-legacy" remote="orgasmic" />
  <project path="device/qcom/sepolicy-legacy-um" name="device_qcom_sepolicy" groups="qcom,pdk-qcom" revision="twelve-legacy-um" remote="orgasmic" />

  <!-- External -->
  <project path="external/tinycompress" name="external_tinycompress" groups="pdk" remote="orgasmic" />

  <!-- Frameworks -->
  <project path="frameworks/av" name="frameworks_av" remote="orgasmic" />
  <project path="frameworks/base" name="frameworks_base" groups="pdk-cw-fs,pdk-fs" remote="orgasmic" />
  <project path="frameworks/native" name="frameworks_native" groups="pdk-cw-fs,pdk-fs" remote="orgasmic" />

  <!-- Hals -->
  <project path="hardware/qcom-caf/sm8250/audio" name="hardware_qcom-caf_sm8250_audio" remote="orgasmic" />
  <project path="hardware/qcom-caf/sm8250/display" name="hardware_qcom-caf_sm8250_display" remote="orgasmic" />
  <project path="hardware/qcom-caf/sm8250/media" name="hardware_qcom-caf_sm8250_media" remote="orgasmic" />
  
  <!-- Hardware -->
  <project path="hardware/lineage/interfaces" name="hardware_lineage_interfaces" remote="orgasmic" />

  <!-- Packages -->
  <project path="packages/apps/Launcher3" name="packages_apps_Launcher3" remote="orgasmic" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="orgasmic" />
  <project path="packages/apps/SettingsIntelligence" name="packages_apps_SettingsIntelligence" remote="orgasmic" />
  <project path="packages/apps/ThemePicker" name="packages_apps_ThemePicker" remote="orgasmic" />
  <project path="packages/apps/WallpaperPicker2" name="packages_apps_WallpaperPicker2" remote="orgasmic" />

  <!-- System -->
  <project path="system/core" name="system_core" groups="pdk" remote="orgasmic" />
  <project path="system/sepolicy" name="system_sepolicy" remote="orgasmic" />
  <project path="system/update_engine" name="system_update_engine" remote="orgasmic" />

  <!-- Vendor -->
  <project path="vendor/orgasmic" name="vendor_orgasmic" remote="orgasmic" />
  <project path="vendor/gms" name="vendor_gms" remote="orgasmic-gitlab" clone-depth="1" />

</manifest>
